<%
   section_id = "related_accessions" if section_id.blank?
%>

<section id="<%= section_id %>" class="subrecord-form-dummy">
  <h3><%= I18n.t("related_accession._plural") %></h3>

  <div class="subrecord-form-container">
    <div class="subrecord-form-fields">
      <table class="table table-striped table-bordered table-condensed table-hover token-list">
        <thead>
        <tr>
          <td><%= I18n.t("accession.id_0") %></td>
          <td><%= I18n.t("accession.title") %></td>
        </tr>
        </thead>
        <tbody>
        <% related_accessions.each_with_index do | accession, index | %>
          <tr>
            <td><%= (0..3).map{|i| accession["_resolved"]["id_#{i}"]}.compact.join("-") %></td>
            <td>
              <%= render_token :object => accession["_resolved"],
                               :label => accession["_resolved"]["display_string"],
                               :type => "accession",
                               :uri => accession["ref"] %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

</section>
