<%
   section_id = "dates" if section_id.blank?
   section_title = "Dates" if section_title.blank?
%>

<section id="<%= section_id %>">
  <h3><%= section_title %></h3>
  <div class="accordion details" id="<%= section_id %>_accordion">
    <% dates.each_with_index do | date, index | %>
      <div class="accordion-group">
        <div class="accordion-heading">
          <div class="row-fluid collapsed accordion-toggle" data-toggle="collapse" data-parent="#<%= section_id %>_accordion" href="#<%= section_id %>_date_<%= index %>">
            <div class="span1">
              <span class="icon-chevron-right"></span>
              <span class="icon-chevron-down"></span>
            </div>
            <div class="span2">
              <%= I18n.t("enumerations.date_label.#{date['label']}", :default => date['label']) %>
            </div>
            <div class="span6">
              <!--https://www.pivotaltracker.com/story/show/41527633 -->
              <% if date['expression'] %>
                <%= date['expression']%>
              <% elsif date['date_type'] === "single" %>
                <%= date['begin'] %>
              <% elsif date['date_type'] %>
                <%= date['begin'] %> &ndash; <%= date['end'] %>
              <% end %>
            </div>
            <div class="span3">
              <% if date['certainty']%><%= I18n.t("enumerations.date_certainty.#{date['certainty']}", :default => date['certainty']) %><% end %>
            </div>
          </div>
        </div>
        <div id="<%= section_id %>_date_<%= index %>" class="accordion-body collapse">
          <%= read_only_view(date) %>
        </div>
      </div>
    <% end %>
  </div>
</section>
