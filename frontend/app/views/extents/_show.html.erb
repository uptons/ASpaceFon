<%
   section_id = "extents" if section_id.blank?
%>

<section id="<%= section_id %>">
  <h3><%= I18n.t("extent._plural") %></h3>
  <div class="accordion details" id="<%= section_id %>_accordion">
    <% extents.each_with_index do | extent, index | %>
      <div class="accordion-group">
        <div class="accordion-heading">
          <div class="row-fluid accordion-toggle collapsed" data-toggle="collapse" data-parent="#<%= section_id %>_accordion" href="#<%= section_id %>_extent_<%= index %>">
            <div class="span1">
              <span class="icon-chevron-right"></span>
              <span class="icon-chevron-down"></span>
            </div>
            <div class="span4">
              <%= extent['number'] %> 
              <%= I18n.t('enumerations.extent_extent_type.'+extent['extent_type'], :default => extent['extent_type']) %>
            </div>
            <div class="span7">
              <%= extent['container_summary'] %>
            </div>
          </div>
        </div>
        <div id="<%= section_id %>_extent_<%= index %>" class="accordion-body collapse">
          <%= read_only_view(extent) %>
        </div>
      </div>
    <% end %>
  </div>
</section>
