<%
  page_limit = 10

  first_page = [search_data['this_page'] - page_limit / 2, 1].max
  last_page = [first_page+page_limit, search_data['last_page']].min

  page_range = (first_page..last_page)
%>

<% if search_data %>
  <div class="pagination pagination-small pagination-centered">
    <ul>
      <% if not page_range.cover?(1) %>
        <li>
          <%= link_to I18n.t("pagination.first"), params_for_search("page" => 1) %>
        </li>
      <% end %>

      <% if search_data['this_page'] > 1 %>
        <li>
          <%= link_to I18n.t("pagination.previous").html_safe, params_for_search("page" => search_data['this_page'] - 1) %>
        </li>
      <% else  %>
        <li class="disabled"><a href="#"><%= I18n.t("pagination.previous").html_safe %></a></li>
      <% end %>

      <% page_range.each do |i| %>
        <% if search_data['this_page'] === i %>
          <li class="active"><a href="#"><%= i %></a></li>
        <% else %>
          <li>
            <%= link_to i, params_for_search("page" => i) %>
          </li>
        <% end %>
      <% end %>

      <% if search_data['this_page'] != search_data['last_page'] %>
        <li>
          <%= link_to I18n.t("pagination.next").html_safe, params_for_search("page" => search_data['this_page'] + 1) %>
        </li>
      <% else %>
        <li class="disabled"><a href="#"><%= I18n.t("pagination.next").html_safe %></a></li>
      <% end %>
      <% if not page_range.cover?(search_data['last_page']) %>
        <li>
          <%= link_to I18n.t("pagination.last"), params_for_search("page" => search_data['last_page']) %>
        </li>
      <% end %>
    </ul>
  </div>

<% end %>

